    "architecture": {
        "64bit": {
            "url": "https://github.com/gendloop/NeatDM/archive/refs/tags/v1.0.0.zip"
        }
    },
    "installer": {
        "script": [
            "Push-Location \"$dir\"",
            "7z x NeatDM-$version\\dist\\NeatDM.7z",
            "Remove-Item NeatDM-$version",
            "Pop-Location"
        ]
    },
    "bin": "app\\NeatDM.exe",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/gendloop/NeatDM/archive/refs/tags/v$version.zip"
            }
        }
    }
}
